  "bugs": {
    "url": "https://github.com/devalparikh/NLP_Chat_App/issues"
  },
  "homepage": "https://github.com/devalparikh/NLP_Chat_App#readme",
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
