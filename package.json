{
  "name": "nlp_chat_app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install & npm run install-client && npm run install-server",
    "install-client": "cd nlp-chat-client && npm run install",
    "install-server": "cd backend && npm run install",

    "build": "npm run build-client",
    "build-client": "cd nlp-chat-client && npm run install && npm run build",
    "build-server": "cd backend && npm run build",
    
    "start": "cd backend && node server.js",
    "dev": "concurrently \"cd backend && npm run dev\" \"cd nlp-chat-client && npm start\" "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devalparikh/NLP_Chat_App.git"
  },
